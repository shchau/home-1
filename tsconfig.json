{
	"compilerOptions": {
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": false,
		"target": "es6",
		"lib": ["es5", "es6", "dom"],
		"sourceMap": true
	},
	"include": ["./src/**/*"]
}
